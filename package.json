{
  "license": "CC0-1.0",
  "name": "emp",
  "version": "0.4.2",
  "private": true,
  "description": "Electron Music Player",
  "author": "Kevin Frei <kevinfrei@hotmail.com>",
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "analyze": "er-analyze",
    "release": "yarn prep-release && yarn opt-release && electron-builder --publish=always",
    "tryrel": "yarn prep-release && yarn opt-release && electron-builder --publish=never",
    "opt-release": "minify -i -r build",
    "prep-release": "yarn clean && yarn release-build && rimraf build/main/__tests__",
    "clean": "rimraf public/main public/*.js public/*.js.map .ts*.tsbuildinfo build dist",
    "release-build": "er-prepare -r && er-build",
    "build": "er-prepare && er-build",
    "start": "er-start",
    "prepare": "er-prepare",
    "types": "er-types",
    "test": "er-test",
    "testui": "jest --config config/jest.jsdom.js --watch",
    "testnode": "jest --config config/jest.node.js --watch",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.tsx\" \"static/**/*.ts\" \"config/*.js\" \"config/*.json\" \"*.json\" \"*.md\" \"src/**/*.css\" .prettierrc",
    "lint": "yarn eslint --fix --ext .ts --ext .tsx ./",
    "chk": "er-check",
    "linecount": "git ls-files|grep \"\\.\\(css\\|ts\\|tsx\\)$\"|grep -v \"__\\|\\.d\\.ts\"|xargs wc -l",
    "postinstall": "husky install"
  },
  "build": {
    "appId": "com.music-player.freik",
    "productName": "Electron Music Player",
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "icon": "build/icon.png"
    },
    "linux": {
      "icon": "build/icon.png"
    },
    "win": {
      "icon": "build/icon.png"
    }
  },
  "dependencies": {
    "@fluentui/font-icons-mdl2": "^8.1.0",
    "@fluentui/react": "^8.14.6",
    "@fluentui/react-hooks": "^8.2.0",
    "@freik/core-utils": "^0.23.2",
    "@freik/media-core": "^0.4.6",
    "@freik/media-utils": "^0.10.10",
    "@freik/node-utils": "^0.14.5",
    "album-art": "^2.0.2",
    "electron-is-dev": "^2.0.0",
    "open": "^8.0.8",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "recoil": "^0.2.0",
    "xxhashjs": "^0.2.2"
  },
  "browserslist": {
    "production": [
      "last 1 chrome version"
    ],
    "development": [
      "last 1 chrome version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.14.2",
    "@babel/plugin-transform-react-jsx": "^7.13.12",
    "@freik/build-tools": "^2.7.2",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.6",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.0.3",
    "@types/react": "^17.0.5",
    "@types/react-dom": "^17.0.4",
    "@types/react-test-renderer": "^17.0.1",
    "@types/recoil": "^0.0.1",
    "@types/xxhashjs": "^0.2.2",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "babel-eslint": "^10.1.0",
    "electron": "^12.0.7",
    "electron-builder": "^22.11.3",
    "electron-devtools-installer": "^3.2.0",
    "electron-react-devtools": "^0.5.3",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.7.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "jest-transform-css": "^2.1.0",
    "postcss": "^8.2.15",
    "prettier": "^2.3.0",
    "react-scripts": "^4.0.3",
    "react-test-renderer": "^17.0.2",
    "rimraf": "^3.0.2",
    "svg-react-loader": "^0.4.6",
    "ts-jest": "^26.5.6",
    "typescript": "^4.2.3"
  }
}
