{
  "license": "CC0-1.0",
  "name": "emp",
  "version": "0.8.4",
  "private": true,
  "description": "Electron Music Player",
  "author": "Kevin Frei <kevinfrei@hotmail.com>",
  "main": "public/electron.js",
  "homepage": "./",
  "build": {
    "appId": "com.music-player.freik",
    "productName": "Electron Music Player",
    "directories": {
      "buildResources": "build"
    },
    "fileAssociations": {
      "ext": [
        "mp3",
        "m4a",
        "aac",
        "flac",
        "wma"
      ],
      "description": "Audio files",
      "role": "Viewer"
    },
    "mac": {
      "icon": "build/icon.png"
    },
    "linux": {
      "icon": "build/icon.png",
      "category": "Audio",
      "mimeTypes": [
        "audio/mpeg",
        "audio/m4a",
        "audio/aac",
        "audio/x-flac"
      ]
    },
    "win": {
      "icon": "build/icon.png"
    }
  },
  "scripts": {
    "analyze": "er analyze",
    "release": "yarn prep-release && yarn opt-release && electron-builder --publish=always",
    "tryrel": "yarn prep-release && yarn opt-release && electron-builder --publish=never",
    "opt-release": "er minify -i -r build",
    "prep-release": "yarn clean && yarn release-build && rimraf build/main/__tests__",
    "clean": "rimraf public/main public/*.js build dist",
    "release-build": "er prepare -r && er build",
    "build": "er prepare && er build",
    "start": "er start",
    "prepare": "er prepare",
    "types": "er types",
    "test": "er test",
    "debugstart": "cross-env BROWSER=none react-scripts start",
    "testui": "jest --config config/jest.jsdom.js --watch",
    "testnode": "jest --config config/jest.node.js --watch",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.tsx\" \"static/**/*.ts\" \"config/*.js\" \"config/*.json\" \"public/*.html\" \"*.json\" \"*.md\" \"src/**/*.css\" .prettierrc",
    "lint": "yarn eslint --fix --ext .ts --ext .tsx ./",
    "chk": "er check",
    "linecount": "git ls-files|grep '\\.\\(css\\|ts\\|tsx\\)$'|grep -v __|grep -v \\.d\\.ts|xargs wc -l",
    "postinstall": "husky install",
    "verbump": "node config/set-version.js",
    "bumpver": "node config/set-version.js"
  },
  "dependencies": {
    "@fluentui/react": "^8.87.1",
    "@fluentui/react-hooks": "^8.6.5",
    "@fluentui/react-icons-mdl2": "^1.3.15",
    "@freik/audiodb": "^0.4.5",
    "@freik/core-utils": "~1.2.0",
    "@freik/elect-main-utils": "^0.2.4",
    "@freik/elect-render-utils": "^0.2.4",
    "@freik/electron-renderer": "^0.2.3",
    "@freik/media-core": "~0.10.6",
    "@freik/media-utils": "~0.13.5",
    "@freik/node-utils": "~1.1.1",
    "@freik/p-limit": "^5.0.0",
    "@freik/web-utils": "^0.3.2",
    "album-art": "^2.0.2",
    "electron-is-dev": "^2.0.0",
    "jimp": "^0.16.1",
    "open": "^8.4.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "recoil": "^0.7.4",
    "shared": "file:./shared",
    "xxhashjs": "^0.2.2"
  },
  "browserslist": {
    "production": [
      "last 1 chrome version"
    ],
    "development": [
      "last 1 chrome version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@babel/eslint-parser": "^7.18.9",
    "@babel/plugin-transform-react-jsx": "^7.18.10",
    "@freik/build-tools": "3.2.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^12.1.5",
    "@types/electron-devtools-installer": "^2.2.2",
    "@types/jest": "^27.5.2",
    "@types/node": "^18.6.5",
    "@types/react": "^17.0.48",
    "@types/react-dom": "^17.0.17",
    "@types/react-test-renderer": "^17.0.2",
    "@types/xxhashjs": "^0.2.2",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "cross-env": "^7.0.3",
    "electron": "^20.0.1",
    "electron-builder": "^23.3.3",
    "electron-devtools-installer": "^3.2.0",
    "electron-react-devtools": "^0.5.3",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.1",
    "jest": "27.5.1",
    "jest-transform-css": "^4.0.1",
    "postcss": "8.4.16",
    "prettier": "^2.7.1",
    "react-scripts": "^5.0.1",
    "react-test-renderer": "^17.0.2",
    "rimraf": "^3.0.2",
    "svg-react-loader": "^0.4.6",
    "ts-jest": "27.1.5",
    "typescript": "^4.7.4",
    "wait-on": "^6.0.1"
  },
  "packageManager": "yarn@3.1.1"
}
