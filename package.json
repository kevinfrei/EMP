{
  "license": "CC0-1.0",
  "name": "emp",
  "version": "0.3.6",
  "private": true,
  "description": "Electron Music Player",
  "author": "Kevin Frei <kevinfrei@hotmail.com>",
  "build": {
    "appId": "com.music-player.freik",
    "productName": "Electron Music Player",
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "icon": "build/icon.png"
    },
    "linux": {
      "icon": "build/icon.png"
    },
    "win": {
      "icon": "build/icon.png"
    }
  },
  "main": "public/electron.js",
  "homepage": "./",
  "dependencies": {
    "@fluentui/font-icons-mdl2": "^8.0.0-beta.0",
    "@fluentui/react": "^8.0.0-beta.47",
    "@fluentui/react-hooks": "^8.0.0-beta.0",
    "@freik/core-utils": "^0.10.0",
    "@freik/media-utils": "^0.8.0",
    "@freik/node-utils": "^0.6.0",
    "album-art": "^2.0.2",
    "electron-is-dev": "^1.2.0",
    "open": "^7.4.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "recoil": "^0.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn format",
      "pre-push": "yarn chk"
    }
  },
  "scripts": {
    "analyze": "GENERATE_SOURCEMAP=true yarn build && yarn source-map-explorer 'build/static/js/*.js' 'build/main/*.js' 'build/*.js'",
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-eject": "react-scripts eject",
    "release": "yarn prep-release && yarn opt-release && electron-builder --publish=always",
    "tryrel": "yarn prep-release && yarn opt-release && electron-builder --publish=never",
    "opt-release": "minify -i -r build",
    "prep-release": "yarn clean && yarn release-build && rimraf build/main/__tests__",
    "clean": "rimraf public/main public/*.js public/*.js.map .ts*.tsbuildinfo build dist",
    "release-build": "er-prepare -r && er-build",
    "build": "er-prepare && er-build",
    "start": "er-prepare && concurrently --kill-others \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "prepare": "er-prepare",
    "types": "er-types",
    "test": "concurrently \"jest --config jest.jsdom.config.js\" \"jest --config jest.node.config.js --passWithNoTests\"",
    "testui": "jest --config jest.jsdom.config.js --watch",
    "testnode": "jest --config jest.node.config.js --watch",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.tsx\" \"static/**/*.ts\" \"*.js\" \"*.json\" \"*.md\" \"src/**/*.css\" .prettierrc",
    "lint": "yarn eslint --fix --ext .ts --ext .tsx ./",
    "chk": "concurrently \"yarn types\" \"yarn lint\" \"yarn test\"",
    "linecount": "git ls-files|grep \"\\.\\(css\\|ts\\|tsx\\)$\"|grep -v \"__\\|\\.d\\.ts\"|xargs wc -l"
  },
  "browserslist": {
    "production": [
      "last 1 chrome version"
    ],
    "development": [
      "last 1 chrome version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.12.13",
    "@babel/plugin-transform-react-jsx": "^7.12.13",
    "@freik/build-tools": "^2.2.0",
    "@testing-library/jest-dom": "^5.11.8",
    "@testing-library/react": "^11.2.5",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.22",
    "@types/react": "^17.0.1",
    "@types/react-dom": "^17.0.0",
    "@types/react-test-renderer": "^17.0.0",
    "@types/recoil": "^0.0.1",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "babel-eslint": "^10.1.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "electron": "^11.2.2",
    "electron-builder": "^22.9.1",
    "electron-devtools-installer": "^3.1.1",
    "electron-react-devtools": "^0.5.3",
    "eslint-config-prettier": "^7.2.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.7",
    "jest-transform-css": "^2.1.0",
    "prepack": "^0.2.54",
    "prettier": "^2.2.1",
    "react-scripts": "^4.0.1",
    "react-test-renderer": "^17.0.1",
    "rimraf": "^3.0.2",
    "source-map-explorer": "^2.5.2",
    "svg-react-loader": "^0.4.6",
    "ts-jest": "^26.5.0",
    "uglify-es": "^3.3.9",
    "wait-on": "^5.2.1"
  }
}
