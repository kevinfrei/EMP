{
  "license": "CC0-1.0",
  "name": "emp",
  "version": "0.8.4",
  "private": true,
  "description": "Electron Music Player",
  "author": "Kevin Frei <kevinfrei@hotmail.com>",
  "main": "public/electron.js",
  "homepage": "./",
  "build": {
    "appId": "com.music-player.freik",
    "productName": "Electron Music Player",
    "directories": {
      "buildResources": "build"
    },
    "fileAssociations": {
      "ext": [
        "mp3",
        "m4a",
        "aac",
        "flac",
        "wma"
      ],
      "description": "Audio files",
      "role": "Viewer"
    },
    "mac": {
      "icon": "build/icon.png"
    },
    "linux": {
      "icon": "build/icon.png",
      "category": "Audio",
      "mimeTypes": [
        "audio/mpeg",
        "audio/m4a",
        "audio/aac",
        "audio/x-flac"
      ]
    },
    "win": {
      "icon": "build/icon.png"
    }
  },
  "scripts": {
    "analyze": "ftool analyze",
    "release": "yarn prep-release && yarn opt-release && electron-builder --publish=always",
    "tryrel": "yarn prep-release && yarn opt-release && electron-builder --publish=never",
    "opt-release": "ftool minify -i -r build",
    "prep-release": "yarn clean && yarn release-build && rimraf build/main/__tests__",
    "clean": "rimraf public/main public/*.js build dist",
    "release-build": "ftool prepare -r && ftool build",
    "build": "ftool prepare && ftool build",
    "start": "ftool start",
    "prepare": "ftool prepare",
    "types": "ftool types",
    "test": "ftool test",
    "debugstart": "cross-env BROWSER=none react-scripts start",
    "testui": "jest --config config/jest.jsdom.js --watch",
    "testnode": "jest --config config/jest.node.js --watch",
    "format": "ftool format",
    "lint": "yarn eslint --fix --ext .ts --ext .tsx ./",
    "chk": "ftool check",
    "linecount": "ftool linecount .css .ts .tsx .html -__ -.d.ts",
    "postinstall": "husky install",
    "verbump": "node config/set-version.js",
    "bumpver": "node config/set-version.js"
  },
  "dependencies": {
    "@fluentui/react": "^8.97.2",
    "@fluentui/react-hooks": "^8.6.11",
    "@fluentui/react-icons-mdl2": "^1.3.22",
    "@freik/audiodb": "^0.5.1",
    "@freik/core-utils": "~1.2.0",
    "@freik/elect-main-utils": "^0.3.0",
    "@freik/elect-render-utils": "^0.3.0",
    "@freik/electron-renderer": "^0.3.1",
    "@freik/media-core": "~0.11.0",
    "@freik/media-utils": "~0.14.2",
    "@freik/node-utils": "~1.2.2",
    "@freik/p-limit": "^5.0.0",
    "@freik/web-utils": "^0.4.0",
    "@types/rimraf": "^3.0.2",
    "album-art": "^2.0.2",
    "electron-is-dev": "^2.0.0",
    "jimp": "^0.16.2",
    "open": "^8.4.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "recoil": "^0.7.5",
    "rimraf": "^3.0.2",
    "shared": "file:./shared",
    "xxhashjs": "^0.2.2"
  },
  "browserslist": {
    "production": [
      "last 1 chrome version"
    ],
    "development": [
      "last 1 chrome version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/plugin-transform-react-jsx": "^7.19.0",
    "@freik/build-tools": "3.4.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/electron-devtools-installer": "^2.2.2",
    "@types/jest": "^27.5.2",
    "@types/node": "^18.8.2",
    "@types/react": "^17.0.50",
    "@types/react-dom": "^17.0.17",
    "@types/react-test-renderer": "^17.0.2",
    "@types/xxhashjs": "^0.2.2",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "cross-env": "^7.0.3",
    "electron": "^21.0.1",
    "electron-builder": "^23.6.0",
    "electron-devtools-installer": "^3.2.0",
    "electron-react-devtools": "^0.5.3",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.1",
    "jest": "27.5.1",
    "jest-transform-css": "^6.0.0",
    "postcss": "8.4.17",
    "prettier": "^2.7.1",
    "react-scripts": "^5.0.1",
    "react-test-renderer": "^17.0.2",
    "svg-react-loader": "^0.4.6",
    "ts-jest": "27.1.5",
    "typescript": "^4.8.4",
    "wait-on": "^6.0.1"
  },
  "packageManager": "yarn@3.1.1"
}
