{
  "license": "CC0-1.0",
  "name": "emp",
  "version": "0.8.8",
  "private": true,
  "description": "Electron Music Player",
  "author": "Kevin Frei <kevinfrei@hotmail.com>",
  "main": "dist-electron/main.js",
  "homepage": "./",
  "workspaces": [
    "shared",
    "modules/*"
  ],
  "scripts": {
    "clean": "rimraf public/main public/*.js build dist",
    "testui": "jest --config config/jest.jsdom.js --watch",
    "testnode": "jest --config config/jest.node.js --watch",
    "justtest": "jest --config config/jest.jsdom.js && jest --pass-with-no-tests --config config/jest.node.js",
    "format": "ftool format",
    "lint": "yarn eslint --fix --ext .ts --ext .tsx ./src ./electron ./renderer",
    "linecount": "ftool linecount .css .ts .tsx .html -__ -.d.ts",
    "postinstall": "husky install",
    "typecheck": "tsc --noEmit",
    "test": "yarn typecheck && yarn lint && yarn justtest",
    "verbump": "node config/set-version.js",
    "bumpver": "node config/set-version.js",
    "dev": "vite",
    "build": "npx lerna run build && tsc && vite build && electron-builder",
    "preview": "vite preview",
    "lerna": "npx lerna run",
    "lerna-build": "npx lerna run build",
    "hook-commit": "ftool format",
    "hook-push": "yarn test"
  },
  "dependencies": {
    "@fluentui/react": "^8.110.13",
    "@fluentui/react-components": "^9.28.1",
    "@fluentui/react-icons-mdl2": "^1.3.47",
    "@freik/audiodb": "^0.8.3",
    "@freik/containers": "^0.2.5",
    "@freik/electron-main": "^0.1.0",
    "@freik/electron-preload": "^0.1.0",
    "@freik/electron-render": "^0.1.0",
    "@freik/emp-shared": "^0.0.6",
    "@freik/helpers": "^0.3.4",
    "@freik/logger": "^0.2.3",
    "@freik/media-core": "^0.14.3",
    "@freik/media-utils": "^0.16.0",
    "@freik/node-utils": "^1.3.10",
    "@freik/p-limit": "^5.0.0",
    "@freik/sync": "^0.2.4",
    "@freik/text": "^0.3.4",
    "@freik/typechk": "^0.5.3",
    "@freik/web-utils": "^0.5.2",
    "album-art": "^3.1.1",
    "jimp": "^0.22.10",
    "open": "^9.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "recoil": "^0.7.7",
    "rimraf": "^5.0.1",
    "xxhashjs": "^0.2.2"
  },
  "browserslist": {
    "production": [
      "last 1 chrome version"
    ],
    "development": [
      "last 1 chrome version"
    ]
  },
  "devDependencies": {
    "@freik/build-tools": "3.6.3",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.0.0",
    "@types/debug": "^4.1.8",
    "@types/electron-devtools-installer": "^2.2.2",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.10",
    "@types/react": "^17.0.64",
    "@types/react-dom": "^17.0.20",
    "@types/react-test-renderer": "^17.0.2",
    "@types/xxhashjs": "^0.2.2",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "@vitejs/plugin-react": "^4.0.4",
    "cross-env": "^7.0.3",
    "electron": "^25.5.0",
    "electron-builder": "^24.6.3",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.0.0",
