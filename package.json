    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "husky": "^8.0.3",
    "jest": "29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "jest-transform-css": "^6.0.1",
    "lerna": "^7.1.5",
    "postcss": "8.4.27",
    "prettier": "^3.0.1",
    "react-scripts": "^5.0.1",
    "react-test-renderer": "^17.0.2",
    "svg-react-loader": "^0.4.6",
    "ts-jest": "29.1.1",
    "typescript": "5.1.6",
