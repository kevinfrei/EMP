{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "lib": ["ES2021"],
    "sourceMap": true,
    "outDir": "../public",
    "incremental": true,
    "allowJs": true,
    "tsBuildInfoFile": "../.tsmain.tsbuildinfo",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "moduleResolution": "Node16",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["../static/**/*.ts"],
  "exclude": ["../static/renderer.*"]
}
