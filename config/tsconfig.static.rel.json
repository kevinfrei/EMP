{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "outDir": "../public",
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["../static/**/*.ts", "../static/main.d.ts"],
  "exclude": ["../static/renderer.*"]
}
